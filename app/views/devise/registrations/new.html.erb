<div class="cd-user-modal-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: { class: 'cd-form' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="fieldset">
      <%= f.email_field :email, autofocus: true, placeholder: 'E-mail' , class: 'full-width has-padding has-border' %>
    </div>

    <div class="fieldset">
      <%= f.password_field :password, autocomplete: "off" , placeholder: 'password' , class: 'full-width has-padding has-border' %>
    </div>

    <div class="fieldset">
      <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder: 'password-confirm' , class: 'full-width has-padding has-border' %>
    </div>

    <div class="fieldset">
      <%= f.submit "Sign up", class: 'full-width has-padding' %>
    </div>
  <% end %>
</div>

