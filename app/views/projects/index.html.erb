<div id="slider">
  <img src=<%= image_path '1.jpg' %> data-src-2x=<%= image_path '1@2x.jpg' %> />
  <img src=<%= image_path '2.jpg' %> data-src-2x=<%= image_path '2@2x.jpg' %> />
  <img src=<%= image_path '3.jpg' %> data-src-2x=<%= image_path '3@2x.jpg' %> />
  <img src=<%= image_path '4.jpg' %> data-src-2x=<%= image_path '4@2x.jpg' %> />
</div>

<div class="container">
  <div class="row">
    <% @projects.each do |pro| %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <div class="caption">
            <h3><%= pro.title %></h3>
            <p><%= pro.description %></p>
            <p><%= link_to "botton", pro, class: "btn btn-default" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<script>
  var slider = new IdealImageSlider.Slider({
    selector: '#slider',
    height: 400, // Required but can be set by CSS
    interval: 4000
  });
  //slider.addCaptions();
  slider.start();
</script>






