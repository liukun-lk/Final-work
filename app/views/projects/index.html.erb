<% content_for :head do %>
  <%= stylesheet_link_tag    'project', media: "all" %>
<% end %>

<div class="slideshow" style="height:0;margin-top:44px;overflow:hidden">
  <% @perfect.each do |per| %>
    <%= content_tag(:div, link_to(image_tag(per.image.url), project_path(per.id)), class: 'slide') %>
  <% end %>
</div>

<div class="container clearfix">
  <div class="gallery">
    <% @projects.each do |project| %>
      <div class="artwork small">
        <%= link_to image_tag(project.image.url, alt: project.title), project, class: "preview" %>
        <div class="extra">
          <div class="caption"><%= project.title %></div>
          <div class="timeago"><%= project.updated_at.strftime("%F") %></div>
        </div>
      </div>
    <% end -%>
  </div>
</div>
<div class="pagination wrapper">
  <%= paginate @projects %>
</div>

<%= javascript_include_tag 'project' %>
